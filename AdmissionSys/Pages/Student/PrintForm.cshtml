@page
@model AdmissionSys.Pages.Student.PrintFormModel
@{
    ViewData["Title"] = "PrintForm";
}

<button id="cmd" class="btn btn-primary" onclick="printPage()">Generate PDF</button>
<div>
    <div class="container-wrap" id="content">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-1">

                    </div>
                    <div class="col-sm-2">
                        <img src="https://i.imgur.com/UAyxFiT.png" alt="TF University" class="img-fluid">
                    </div>
                    <div class="col-sm-1">

                    </div>
                    <div class="col-sm-7 d-flex align-items-center">
                        <h2>
                            TF University<br />
                            <small class="text-muted">
                                One Microsoft Way,
                                Redmond, WA 98052-6399
                                <br />
                                E-mail:admission@tfuni.com, Phone: 425.555.0100
                            </small>
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12 d-flex justify-content-center">
                <h1 class="display-4">
                    Admission Form
                </h1>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <h3>General Details</h3>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td colspan="3"><b>Program Applied For</b><br> BCA</td>

                        </tr>
                        <tr>
                            <td><b>Application ID</b><br> @Model.Student[0].StudentID</td>
                            <td><b>Name</b><br> @Model.Student[0].StudentName</td>
                            <td><b>Nationality</b><br> @Model.Student[0].Nationality</td>
                        </tr>
                        <tr>
                            <td><b>Gender</b><br> @Model.Student[0].Gender</td>
                            <td><b>Blood Group</b><br> @Model.Student[0].BloodGroup</td>
                            <td><b>Caste</b><br> @Model.Student[0].Caste</td>
                        </tr>
                        <tr>
                            <td><b>Date of Birth</b><br> @Model.Student[0].DateOfBirth</td>
                            <td><b>Place of Birth</b><br> @Model.Student[0].PlaceOfBirth</td>
                            <td rowspan="3">
                                <b>Picture</b><br>
                                <div style="width:100%; height:100%;" class="d-flex justify-content-center">
                                    <img src="@Model.Student[0].StudentPhoto" alt="TF University" class="img-fluid">
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Mobile Number</b><br> @Model.Student[0].ApplicantsMobileNumber</td>
                            <td><b>Residence Phone</b><br> @Model.Student[0].ResidencePhone</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <b>Address</b><br>
                                @Model.Student[0].StudentAddress
                            </td>
                        </tr>
                        <tr>
                            <td><b>City</b><br> @Model.Student[0].City</td>
                            <td><b>State</b><br> @Model.Student[0].State</td>
                            <td><b>Postal Code</b><br> @Model.Student[0].PostalCode</td>
                        </tr>
                        <tr>
                            <td><b>Guardian Name</b><br> @Model.Student[0].StudentGuardianName</td>
                            <td><b>Relationship</b><br> @Model.Student[0].RelationWithGuardian</td>
                            <td><b>Guardian's Mobile Number</b><br> @Model.Student[0].GuardianMobileNumber</td>
                        </tr>
                        <tr>
                            <td><b>Occupation of Guardian</b><br> @Model.Student[0].GuardianOccupation</td>
                            <td><b>Family Income</b><br> @Model.Student[0].FamilyIncome</td>
                            <td><b>Physically Challenged?</b><br> @Model.Student[0].PhysicallyHandicapStatus</td>
                        </tr>
                    </tbody>
                </table>
                <hr>
                <h3>Academic Record</h3>
                <table class="table table-bordered">
                    <thead class="thead-dark">
                    <tr>
                        <th>
                            Qualification
                        </th>
                        <th>
                            Board/University
                        </th>
                        <th>
                            Faculty/College Name
                        </th>
                        <th>
                            Passing Date
                        </th>
                        <th>
                            Marks/Grade
                        </th>
                        <th>
                            Out Of/CGPA
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>SSC</td>
                        <td>CBSE</td>
                        <td>Indian School Montero</td>
                        <td>29/8/2013</td>
                        <td>321</td>
                        <td>500</td>
                    </tr>
                    <tr>
                        <td>HSC</td>
                        <td>GSHSEB</td>
                        <td>Kayman School Kami</td>
                        <td>31/5/2015</td>
                        <td>AA</td>
                        <td>10</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-2">
                <b>Date of Submission</b><br><br><br>
                <hr>
            </div>
            <div class="col-md-8">
            </div>
            <div class="col-md-2">
                <b>Signature</b><br><br><br>
                <hr>
            </div>
        </div>
    </div>
</div>
<script>
    function printPage() {
        var divElements = document.getElementById("content").innerHTML;
        var oldPage = document.body.innerHTML;

        document.body.innerHTML =
            "<html><head><title></title></head><body>" +
            divElements + "</body>";
        window.print();
            
        document.body.innerHTML = oldPage;
    }        
</script>
