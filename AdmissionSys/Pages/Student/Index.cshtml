@page
@model AdmissionSys.Pages.Student.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2>Index</h2>
        <p>
            <a asp-page="Create">Create New</a>
        </p>
        <table class="table table-responsive">
            <caption>List of Students</caption>
            <thead class="thead-dark">
                <tr>
                    <th>
                        Signature Preview
                    </th>
                    <th>
                        Photo Preview
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].StudentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].StudentAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].PostalCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].Nationality)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].StudentGuardianName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].RelationWithGuardian)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].BloodGroup)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].ResidencePhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].PlaceOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].GuardianMobileNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].ApplicantsMobileNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].FamilyIncome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].AadharNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].Caste)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].GuardianOccupation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].PhysicallyHandicapStatus)
                    </th>
                    <th> Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Student)
                {
                <tr>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.StudentSignature)" height="50px" width="50px" />
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.StudentPhoto)" height="50px" width="50px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nationality)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentGuardianName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RelationWithGuardian)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BloodGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResidencePhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlaceOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GuardianMobileNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicantsMobileNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FamilyIncome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AadharNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Caste)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GuardianOccupation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhysicallyHandicapStatus)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.StudentID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.StudentID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.StudentID">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

