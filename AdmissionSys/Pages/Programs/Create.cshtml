@page
@model AdmissionSys.Pages.Programs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2>Create</h2>
        <h4>Programs</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Programs.ProgramName" class="control-label"></label>
                <input asp-for="Programs.ProgramName" class="form-control" />
                <span asp-validation-for="Programs.ProgramName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Programs.IsIntakeOpen" /> @Html.DisplayNameFor(model => model.Programs.IsIntakeOpen)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Programs.DocsRequired" class="control-label"></label>
                <input asp-for="Programs.DocsRequired" class="form-control" />
                <span asp-validation-for="Programs.DocsRequired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary-v3" />
            </div>
        </form>
        <div>
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
