@page
@using AdmissionSys.Models
@model AdmissionSys.Pages.ApplicationList.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ApplicationList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationList.ProgramsID" value="@ViewData["ProgramsID"]" />
            <div class="form-group">
                <label asp-for="ApplicationList.ApplicationCat" class="control-label"></label>
                <select asp-for="ApplicationList.ApplicationCat" class="form-control" asp-items="Html.GetEnumSelectList(typeof(ApplicationCat))"></select>
                <span asp-validation-for="ApplicationList.ApplicationCat" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <p>Once you submit application. It can not be altered.</p>
                <input type="submit" value="Submit Application" class="btn btn-primary-v3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
