@page
@model IndexModel
@{
}
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Documents[0].DocumentType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Documents)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentType)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem=>item.DocumentPath)" target="_blank">View Document</a>
                </td>
                <td>
                    <a asp-page="../../Documents/Delete" asp-route-id="@item.DocumentsID">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-10 offset-md-1">
        <a asp-page="../Student/Index">Back to List</a>
    </div>
</div>