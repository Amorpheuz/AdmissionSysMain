<table class="table">
    <thead>
        <tr>
            <th>
                Program Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationList[0].ApplicationCat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationList[0].Status)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ApplicationList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Programs.ProgramName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationCat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>
                <a asp-page="../../ApplicationList/Delete" asp-route-id="@item.ApplicationListID">Delete</a>
            </td>

            <td>
                <a href="/admin/student/moreoptions?id=@item.ApplicationListID&&sid=@item.StudentID&&pid=@item.ProgramsID">More Options</a>
            </td>
        </tr>
        }
    </tbody>
</table>
